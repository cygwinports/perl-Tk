CPAN_AUTHOR=srezic
inherit perl

PATCH_URI="mirror://portage/dev-perl/perl-tk/files/xorg.patch
           mirror://portage/dev-perl/perl-tk/files/804.028-path.patch"

src_compile() {
	lndirs
	cd ${B}
	perl_compile x XFT=1

	for d in DragDrop demos JPEG PNG pod TextList WinPhoto
	do
		cygmake -j1 -C ${d} manifypods
	done
}

src_install() {
	cd ${B}
	cygmake pure_install DESTDIR=${D}
	perl_postinst
}
