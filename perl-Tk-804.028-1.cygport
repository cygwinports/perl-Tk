CPAN_AUTHOR=srezic
inherit perl

src_compile() {
	lndirs
	cd ${B}
	perl_compile x

	for d in DragDrop demos JPEG PNG pod TextList WinPhoto
	do
		cygmake -j1 -C ${d} manifypods
	done
}


# 'make test' horribly broken
src_test() { :; }

src_install() {
	cd ${B}
	cygmake pure_install DESTDIR=${D}
	perl_postinst
}
