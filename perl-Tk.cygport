CPAN_AUTHOR=srezic
inherit perl

NAME="perl-Tk"
VERSION=804.030
RELEASE=3
CATEGORY="Perl"
SUMMARY="Tk GUI toolkit for Perl"

src_compile() {
	lndirs
	cd ${B}
	perl_compile x

	for d in DragDrop demos JPEG PNG pod TextList WinPhoto
	do
		cygmake -j1 -C ${d} manifypods
	done
}

src_install() {
	cd ${B}
	cygmake pure_install DESTDIR=${D}
	perl_postinst
}
